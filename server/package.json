{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend server for recipe site",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "production": "node dist/src/index.js",
    "test": "jest",
    "precommit": "lint-staged",
    "prepush": "jest --passWithNoTests"
  },
  "author": "williamstyronejr",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/redis": "^2.8.32",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "redis": "^3.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel": "^6.23.0",
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
